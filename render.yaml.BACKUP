services:
  - type: web
    name: flask-app
    runtime: python
    nodeVersion: 18.x
    buildCommand: |
      pip install -r requirements.txt
      npm install --prefix ./ --production=false
      npm run build
    startCommand: gunicorn back:app
    envVars:
      - key: RENDER
        value: true
      - key: NODE_ENV
        value: production